##################################################
# Behaviour
##################################################
shell_integration			      disabled
map ctrl+shift+c			      copy_to_clipboard
map ctrl+shift+v			      paste_from_clipboard
# wayland_titlebar_color		  system
url_prefixes				        http https gemini
# url_color					          #7aa2f7
url_style					          curly
strip_trailing_spaces	      smart
enable_audio_bell			      no
cursor_shape				        beam
cursor_blink_interval		    -1
cursor_stop_blinking_after	15
window_padding_width		    5
mouse_hide_wait				      3
sync_to_monitor				      yes
# Terminal scroll
map ctrl+l					        scroll_line_up
map ctrl+k					        scroll_line_down
map alt+shift+[             previous_tab
map alt+shift+]             next_tab
map alt+t                   new_tab
map alt+shift+i             set_tab_title
##################################################
# Font Configuration
##################################################
font_family					        Hack Nerd Font
font_size					          12
adjust_line_height		      1
adjust_column_width		      0
##################################################
# Theme
##################################################
background_opacity          0.8
background_blur             80
##################################################
# Colors
##################################################
# include themes/cyberdream.conf
# include themes/mountain.conf


# BEGIN_KITTY_THEME
# Neutron
include current-theme.conf
# END_KITTY_THEME
